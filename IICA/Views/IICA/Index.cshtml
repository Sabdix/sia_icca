    <link href="~/Content/webarch/css/webarch.css" rel="stylesheet" type="text/css" />
</head>

<body class="error-body no-top">
    <script>
        function rootUrl(url) {
            var _rootUrl = '@Url.Content("~")';
            var x = url;
            if (url.indexOf(_rootUrl) != 0) {
                x = _rootUrl + "/" + url;
                x = x.replace(/\/\//g, "/").replace(/\/\//g, "/");
            }
            return x;
        };
    </script>
    <div class="container">
        <div class="row login-container column-seperation">
            <div class="col-md-5 col-md-offset-1">
                <h2>
                    Iniciar sesión en IICA
                </h2>
                <p>
                    Sistema Integral IICA.
                    <br>
                    <a href="#">Inicia sesión ahora mismo</a> para ingresar a <br />IICA-Documentos, IICA-Viaticos, IICA - PVI
                </p>
                <br>

                <img style="width:350px; height:150px;" src="~/Content/assets/img/logo_iica.png" />
            </div>
            <div class="col-md-5">
                <br>
                @using (Ajax.BeginForm("IniciarSesion", "Sesion",
                    new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccesIniciarSesion", OnFailure = "ControlErrores" },
                    new { @class = "login-form validate", id = "login-form", autocomplete = "off" }))
                {
                    <div class="row">
                        <div class="form-group col-md-10">
                            <label class="form-label">No. de empleado</label>
                            @Html.TextBoxFor(x => x.emCveEmpleado, new { @class = "form-control", placeholder = "Usuario", maxlength = "15" })
                            @Html.ValidationMessageFor(x => x.emCveEmpleado, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-10">
                            <label class="form-label">Contraseña</label>
                            @Html.TextBoxFor(x => x.contrasena, new { @class = "form-control", type = "password", placeholder = "Contraseña", maxlength = "20" })
                            @Html.ValidationMessageFor(x => x.contrasena, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-10">
                            <button class="btn btn-info btn-cons pull-right" type="submit">Iniciar sesión</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="~/Content/assets/plugins/pace/pace.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery/jquery-1.11.3.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrapv3/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Content/assets/plugins/jquery-notifications/js/messenger.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-notifications/js/messenger-theme-future.js"></script>

    <script type="text/javascript" src="/Content/assets/plugins/jquery-notifications/js/demo/demo.js"></script>

    <script src="~/Content/webarch/js/webarch.js" type="text/javascript"></script>
    <script src="~/Content/assets/js/Evt/HttpStatusCode.js"></script>
    <script src="~/Content/assets/js/Evt/evtSesion.js"></script>
</body>
</html>