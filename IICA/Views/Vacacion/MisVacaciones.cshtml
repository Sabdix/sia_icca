
@{
    ViewBag.Title = "Mis Vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script>
        nodoMenu = "vacaciones";
        submenu = "misVacaciones";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.PVI
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.PVI.Vacacion>

<ul class="breadcrumb">
    <li>
        <p>VACACIONES</p>
    </li>
    <li><a href="#" class="active">Mis vacaciones</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-mis-vacaciones">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No.</th>
                            <th style="width:15%;text-align: center;">Motivo de las vacaciones</th>
                            <th style="width:10%;text-align: center;">Fecha inicio vacaciones</th>
                            <th style="width:10%;text-align: center;">Inicio de labores</th>
                            <th style="width:10%;text-align: center;">Total de dias solicitados</th>
                            <th style="width:10%;text-align: center;">Fecha de Autorización</th>
                            <th style="width:10%;text-align: center;">Estatus</th>
                            <th style="width:10%;text-align: center;">Motivo del rechazo</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Vacacion vacacion in Model)
                        {
                            string labelEstatus;
                            switch ((EstatusSolicitud)vacacion.estatusVacacion.idEstatusVacacion)
                            {
                                case EstatusSolicitud.SOLICITUD_ENVIADA:
                                case EstatusSolicitud.SOLICITUD_APROBADA:
                                    labelEstatus = "success";
                                    break;
                                case EstatusSolicitud.SOLICITUD_CANCELADA:
                                    labelEstatus = "important";
                                    break;
                                case EstatusSolicitud.SOLICITUD_PENDIENTE_DE_ENVIAR:
                                    labelEstatus = "info";
                                    break;
                                default:
                                    labelEstatus = "success";
                                    break;
                            }
                            <tr>
                                <td>@vacacion.idVacacion</td>
                                <td>@vacacion.motivoVacaciones</td>
                                <td>
                                    <span class="muted">
                                        @(vacacion.fechaInicio == DateTime.MinValue ? "N/A" : vacacion.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(vacacion.fechaFin == DateTime.MinValue ? "N/A" : vacacion.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@vacacion.totalDias</span></td>
                                <td><span class="muted">@(vacacion.fechaAutorizacion.ToShortDateString() == "01/01/1900" ? "Sin autorizar" : vacacion.fechaAutorizacion.ToShortDateString())</span></td>
                                <td><span class="label label-@labelEstatus">@vacacion.estatusVacacion.descripcion</span></td>
                                <td><span class="muted">@vacacion.motivoRechazo</span></td>
                                <td>
                                    @if (vacacion.estatusVacacion.idEstatusVacacion == (int)EstatusSolicitud.SOLICITUD_PENDIENTE_DE_ENVIAR)
                                    {
                                        <span data-toggle="modal" data-target="#modal-enviar" onclick="MostrarModalEnvSol(@(vacacion.idVacacion))">
                                            <button data-toggle="tooltip" title="Enviar solicitud" class="btn btn-info btn-mini">
                                                <i class="fa fa-check-square-o"></i>
                                            </button>
                                        </span>
                                    }
                                    <span onclick="ImprimirFormatoVacacion(@(vacacion.idVacacion))">
                                        <button data-toggle="tooltip" title="Imprimir formato" class="btn btn-info btn-mini">
                                            <i class="fa fa-print"></i>
                                        </button>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modal-enviar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Realmente desea enviar la siguiente solicitud.</h4>
                <p class="no-margin">A continuación se muestran los detalles de la solicitud </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-12">
                        <label class="form-label">Motivo de las vacaciones:</label>
                        <textarea id="modal-env-motivo" type="text" class="form-control" placeholder="Motivo de las vacaciones" readonly></textarea>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Fecha de inicio:</label>
                        <input id="modal-env-fechaIni" type="text" class="form-control" placeholder="Fecha de inicio" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Inicio de labores:</label>
                        <input id="modal-env-fechaFin" type="text" class="form-control" placeholder="Fecha de termino de vacaciones" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-12">
                        <label class="form-label">Formato de autorización</label>
                        <div id="formDropZone"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="EnviarSol()">Enviar solicitud</button>
            </div>
        </div>

    </div>

</div>

<style>
    #dZUpload {
        min-height: 150px !important;
    }
</style>


