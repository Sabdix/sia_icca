
@{
    ViewBag.Title = "Reporte de solicitudes de vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script>
        nodoMenu = "vacaciones";
        submenu = "reportesVaca";
        submenu2 = "vaca-reporteSol";
    </script>
}

@using System.Globalization;
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades.PVI


<ul class="breadcrumb">
    <li>
        <p>VACACIONES</p>
    </li>
    <li><a href="#" class="active">Reporte de solicitudes de vacaciones</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes de vacaciones</span></h4>
            </div>
            <div class="col-md-3">
                <p></p>
                <label class="form-label">Proyecto:</label>
                @Html.DropDownList("proyecto", (IEnumerable<SelectListItem>)ViewBag.Proyectos, "SELECCIONE UN PROYECTO",
                                                          new
                                                          {
                                                              @class = "select-iica",
                                                              id = "select-proyecto",
                                                              style = "min-width: 100%;",
                                                              data_val_required = "Seleccione un proyecto.",
                                                              data_val = "true"
                                                          })
            </div>
            <div class="col-md-3">
                <p></p>
                <label class="form-label">Departamento:</label>
                <select class="select-iica" id="select-departamento" name="departamento"
                        data-val-required="Seleccione un proyecto."
                        data-val="true"
                        style="min-width: 100%;">
                    <option>SELECCIONE UN DEPARTAMENTO</option>
                </select>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" style="text-align: center;" id="tabla-reporte-solVaca">
                    <thead>
                        <tr>
                            <th style="width:15%;text-align: center;">Empleado</th>
                            <th style="width:10%;text-align: center;">Programa</th>
                            <th style="width:10%;text-align: center;">Departamento</th>
                            <th style="width:10%;text-align: center;">Fecha Solicitud</th>
                            <th style="width:10%;text-align: center;">Fecha Inicio</th>
                            <th style="width:10%;text-align: center;">Fecha Fin</th>
                            <th style="width:10%;text-align: center;">Estatus Solicitud</th>
                            <th style="width:10%;text-align: center;">Formato de autorización</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*@foreach (ReporteSolicitudVacacion solicitudVacacion in Model)
                            {
                                <tr>
                                    <td>@(solicitudVacacion.nombreCompleto)</td>
                                    <td><span class="muted">@solicitudVacacion.Proyecto</span></td>
                                    <td><span>@solicitudVacacion.Departamento</span></td>
                                    <td><span class="muted">@solicitudVacacion.FechaSolicitud</span></td>
                                    <td><span class="muted">@solicitudVacacion.FechaInicio</span></td>
                                    <td>
                                        <span class="muted">
                                            <span class="label label-info">
                                                @solicitudVacacion.FechaFin
                                            </span>
                                        </span>
                                    </td>
                                    <td><span class="muted">@solicitudVacacion.DescripcionStatusSolicitud</span></td>
                                </tr>
                            }*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-formato" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="content-formato">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>

</div>

