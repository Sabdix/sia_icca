
@{
    ViewBag.Title = "Registar solicitud de vacaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script>
        nodoMenu = "vacaciones";
        submenu = "nvsolVaca";
    </script>
}
@model IICA.Models.Entidades.PVI.Vacacion

<ul class="breadcrumb">
    <li>
        <p>VACACIONES</p>
    </li>
    <li><a href="#" class="active">Registro de Solicitud</a> </li>
</ul>

<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Ingrese los <span class="semi-bold">datos solicitados</span></h4>
            </div>
            <div class="grid-body no-border">
                <br>
                <div class="row">
                    <div class="col-md-10 col-sm-10 col-md-10 col-vlg-offset-2">
                        @using (Ajax.BeginForm("RegistrarSolicitud", "Vacacion",
new AjaxOptions { HttpMethod = "POST", OnBegin = "MostrarLoading", OnSuccess = "OnSuccesRegistrarSolicitud", OnFailure = "ControlErrores" }, new { autocomplete = "off", id = "form-nuevaSol" }))
                        {
                            <div class="row form-row">
                                <div class="col-md-4">
                                    <label class="form-label">Fecha de la solicitud</label>
                                    @Html.TextBoxFor(x => x.fechaSolicitud, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(x => x.fechaSolicitud, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Dias periodo anterior</label>
                                    @Html.TextBoxFor(x => x.periodoAnterior, new
                                    {
                                        @class = "form-control",
                                        @readonly = "readonly",
                                        @Value = (Model == null) ? "0" : Model.periodoAnterior.ToString()
                                    })
                                    @Html.ValidationMessageFor(x => x.periodoAnterior, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Dias proporcional</label>
                                    @Html.TextBoxFor(x => x.proporcional, new
                                    {
                                        @class = "form-control",
                                        @readonly = "readonly",
                                        @Value = (Model == null) ? "0" : Model.proporcional.ToString()
                                    })
                                    @Html.ValidationMessageFor(x => x.proporcional, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">

                                <div class="col-md-4">
                                    <label class="form-label">Dias saldo vacacional</label>
                                    @Html.TextBoxFor(x => x.totalDiasSaldoVacacional, new
                                    {
                                        @class = "form-control",
                                        @readonly = "readonly",
                                        @Value = (Model == null) ? "0" : Model.totalDiasSaldoVacacional.ToString()
                                    })
                                    @Html.ValidationMessageFor(x => x.totalDiasSaldoVacacional, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Fecha inicio</label>
                                    @Html.TextBoxFor(x => x.fechaInicio, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.fechaInicio, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Inicio de labores</label>
                                    @Html.TextBoxFor(x => x.fechaFin, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.fechaFin, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-4">
                                    <label class="form-label">Dias inhabiles</label>
                                    @Html.TextBoxFor(x => x.diasFestivos, new { @class = "form-control", value = "0" })
                                    @Html.ValidationMessageFor(x => x.diasFestivos, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Total de dias</label>
                                    @Html.TextBoxFor(x => x.totalDias, new { @class = "form-control", @readOnly = "true" })
                                    @Html.ValidationMessageFor(x => x.totalDias, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-8">
                                    <label class="form-label">Motivo de vacaciones</label>
                                    @Html.TextAreaFor(x => x.motivoVacaciones, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.motivoVacaciones, "", new { @class = "error" })
                                </div>
                                <div class="col-md-8">
                                    <button type="button" id="btn-guardar-sol" class="btn btn-info btn-cons"><i class="fa fa-paste"></i>&nbsp;Guardar</button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

    <link href="~/Content/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/bootstrap-timepicker/css/bootstrap-timepicker.css" rel="stylesheet" type="text/css" />


    <script src="~/Content/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <link href="~/Content/assets/plugins/dropzone/css/dropzone.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/dropzone/dropzone.min.js"></script>

    <script src="~/Content/assets/plugins/moment/moment.min.js"></script>
    <script src="~/Content/assets/js/Evt/evtNuevaSolVacacion.js"></script>
}

