
@{
    ViewBag.Title = "Personal";
    Layout = "~/Views/Shared/_LayoutPersonal.cshtml";
}

<script>
    nodoMenu = "personal-personal";
</script>

<ul class="breadcrumb">
    <li>
        <p>PERSONAL</p>
    </li>
    <li><a href="#" class="active">Consulta de personal registrado</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de personal</span></h4>
            </div>
            <div class="col-md-2">
                <p></p>
                <label class="form-label">Fecha inicial:</label>
                <div class="input-append success date no-padding col-md-10 col-lg-10">
                    <input type="text" class="form-control" id="fechaInicio">
                    <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span>
                </div>
            </div>
            <div class="col-md-2">
                <p></p>
                <label class="form-label">Fecha final:</label>
                <div class="input-append success date no-padding col-md-10 col-lg-10">
                    <input type="text" class="form-control" id="fechaFin">
                    <span class="add-on"><span class="arrow"></span><i class="fa fa-th"></i></span>
                </div>
            </div>
            <div class="col-md-2">
                <p></p>
                <label class="form-label">&nbsp;</label>
                <button type="button" class="btn btn-success btn-cons" id="btn-buscar">
                    <i class="fa fa-search"></i>&nbsp;&nbsp;<span class="bold">Buscar</span>
                </button>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" style="text-align: center;" id="tabla-reporte-solPermisos">
                    <thead>
                        <tr>
                            <th style="width:15%;text-align: center;">Apellido Paterno</th>
                            <th style="width:15%;text-align: center;">Apellido Materno</th>
                            <th style="width:15%;text-align: center;">Nombre</th>
                            <th style="width:10%;text-align: center;">Curp</th>
                            <th style="width:15%;text-align: center;">Usuario</th>
                            <th style="width:10%;text-align: center;">Contraseña</th>
                            <th style="width:15%;text-align: center;">Sucursal</th>
                            <th style="width:10%;text-align: center;">Departamento</th>
                            <th style="width:10%;text-align: center;">Fecha de migración</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</div>



