
@{
    ViewBag.Title = "MisIncapacidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using System.Globalization;
@using IICA.Models.Entidades.PVI

@model List<IICA.Models.Entidades.PVI.Incapacidad>

<ul class="breadcrumb">
    <li>
        <p>INCAPACIDADES</p>
    </li>
    <li><a href="#" class="active">Mis incapacidades</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="#grid-config" data-toggle="modal" class="config"></a>
                    <a href="javascript:;" class="reload"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
            </div>
            <div class="grid-body ">
                <table class="table table-hover table-condensed" style="text-align: center;" id="example">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No.</th>
                            <th style="width:10%;text-align: center;">Fecha inicio incapacidad</th>
                            <th style="width:10%;text-align: center;">Fecha fin incapacidad</th>
                            <th style="width:10%;text-align: center;">Total de dias solicitados</th>
                            <th style="width:10%;text-align: center;">Tipo incapacidad</th>
                            <th style="width:10%;text-align: center;">Tipo seguimiento</th>
                            <th style="width:10%;text-align: center;">Fecha de Autorización</th>
                            <th style="width:10%;text-align: center;">Estatus</th>
                            <th style="width:10%;text-align: center;">Motivo del rechazo</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Incapacidad incapacidad in Model)
                        {

                            string labelEstatus = (incapacidad.estatusIncapacidad.idEstatusIncapacidad == 1 ? "success" : "important");
                            <tr>
                                <td>@incapacidad.idIncapacidad</td>
                                <td>
                                    <span class="muted">
                                        @(incapacidad.fechaInicio == DateTime.MinValue ? "N/A" : incapacidad.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(incapacidad.fechaFin == DateTime.MinValue ? "N/A" : incapacidad.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@incapacidad.totalDias</span></td>
                                <td><span class="muted">@incapacidad.tipoIncapacidad.Descripcion_Tipo_Incapacidad</span></td>
                                <td><span class="muted">@incapacidad.tipoSeguimiento.Descripcion_Tipo_Seguimiento</span></td>
                                <td><span class="muted">@(incapacidad.fechaAutorizacion == DateTime.MinValue ? "N/A" : incapacidad.fechaAutorizacion.ToShortDateString())</span></td>
                                <td><span class="label label-@labelEstatus">@incapacidad.estatusIncapacidad.descripcion</span></td>
                                <td><span class="muted">@incapacidad.motivoRechazo</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>