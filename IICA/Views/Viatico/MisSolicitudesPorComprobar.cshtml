
@{
    ViewBag.Title = "SolicitudesPorComprobar";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";

    <script>
        nodoMenu = "misSolicitudes";
        submenu = "misCompro";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Solicitudes por comprobar</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-aut-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No. Solicitud</th>
                            <th style="width:15%;text-align: center;">Viaticante</th>
                            <th style="width:15%;text-align: center;">Proposito</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:5%;text-align: center;">Duración viaje</th>
                            <th style="width:10%;text-align: center;">Medio transporte</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.usuario.nombreCompleto</td>
                                <td>@solicitud.proposito</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@solicitud.duracionViaje</span></td>
                                <td><span class="muted">@solicitud.medioTransporte.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-solViatico">
                                        <button data-toggle="tooltip" title="Ver Solicitud" class="btn btn-info btn-mini"
                                                onclick="VerDetalleSolViatico( @(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-list"></i>
                                        </button>
                                    </span>
                                    <span>
                                        <button data-toggle="tooltip" title="Agregar comprobación" class="btn btn-success btn-mini"
                                                onclick="MostrarModalAgregarComprobacion(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                            <i class="fa fa-plus-circle"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-cancelar">
                                        <button data-toggle="tooltip" title="Ver comprobaciones" class="btn btn-default btn-mini"
                                                onclick="MostrarModalComprobaciones(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-cancelar">
                                        <button data-toggle="tooltip" title="Concluir comprobación" class="btn btn-primary btn-mini"
                                                onclick="OnConcluirComprobacion(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-agregarComprobacion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 id="myModalLabel" class="semi-bold">Agregar comprobación.</h4>
            </div>
            <div class="modal-body">
                <form id="form-comprobacion">
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">No. de solicitud:</label>
                            <input id="modal-comp-idSol" type="text" class="form-control" placeholder="" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Viaticante:</label>
                            <input id="modal-comp-viaticante" type="text" class="form-control" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="row form-row">
                        <div class="col-md-12">
                            <label class="form-label">Tipo de gasto:</label>
                            @Html.DropDownList("modalcompGasto", (IEnumerable<SelectListItem>)ViewBag.GastosComprobacion,
                            new
                            {
                                @class = "select-iica",
                                id = "modal-comp-tipoGasto",
                                style = "width: 100%;",
                                data_val_required = "Seleccione un nivel de mando.",
                                data_val = "true"
                            })
                        </div>
                    </div>
                    <br />
                    <div class="row form-row">
                        <div class="col-md-12">
                            <label class="form-label">Factura en Xml y Pdf</label>
                            <div style="height: 100px;">
                                <div class="col-md-12" id="dropZoneXmlComprobacion"></div>
                            </div>
                        </div>
                        @*<div class="col-md-6">
                <label class="form-label">Factura PDF</label>
                <div style="height: 100px;">
                    <div class="col-md-12" id="dropZonePdfComprobacion"></div>
                </div>
            </div>*@
                    </div>
                    <br />
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">Proveedor:</label>
                            <input id="modal-comp-proveedor" type="text" class="form-control" placeholder="Proveedor" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Lugar:</label>
                            <input id="modal-comp-lugar" type="text" class="form-control" placeholder="Lugar" readonly>
                        </div>
                    </div>
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">Subtotal:</label>
                            <input id="modal-comp-subtotal" type="text" class="form-control" placeholder="Subtotal" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Total:</label>
                            <input id="modal-comp-total" type="text" class="form-control" placeholder="Total" readonly>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btn-cargarFactura" class="btn btn-info">Subir factura</button>
                <button type="button" id="btn-agregarComprobacion" class="btn btn-primary" onclick="OnAgregarComprobacion()">Guardar comprobación</button>
            </div>
        </div>

    </div>

</div>

<div class="modal fade" id="modal-cancelar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Realmente desea CANCELAR la siguiente solicitud.</h4>
                <p class="no-margin">A continuación se muestran los detalles de la solicitud </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">No. de solicitud:</label>
                        <input id="modal-can-idSol" type="text" class="form-control" placeholder="" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Viaticante:</label>
                        <input id="modal-can-viaticante" type="text" class="form-control" placeholder="" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Fecha inicio:</label>
                        <input id="modal-can-fechaInicio" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha fin:</label>
                        <input id="modal-can-fechaFin" type="text" class="form-control" placeholder="Fecha fin" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Duración del viaje:</label>
                        <input id="modal-can-duracionViaje" type="text" class="form-control" placeholder="Duración del viaje" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Resultados esperados:</label>
                        <input id="modal-can-resultadosEsperados" type="text" class="form-control" placeholder="Resultados esperados:" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-12">
                        <label class="form-label">Medio de transporte:</label>
                        <input id="modal-can-medioTransporte" type="text" class="form-control" placeholder="Medio de transporte" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-warning" onclick="CancelarSol()">Cancelar solicitud</button>
            </div>
        </div>

    </div>

</div>


