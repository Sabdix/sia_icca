
@{
    ViewBag.Title = "SolicitudesPorComprobar";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";

    <script>
        nodoMenu = "misSolicitudes";
        submenu = "misCompro";
    </script>

    bool validarSolamenteInforme=true;
    bool validarCargaPasesDeAbordar = false;
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Solicitudes por comprobar</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-aut-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No. Solicitud</th>
                            <th style="width:15%;text-align: center;">Proposito</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:5%;text-align: center;">Duración viaje</th>
                            <th style="width:10%;text-align: center;">Medio transporte</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.proposito</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@solicitud.duracionViaje</span></td>
                                <td><span class="muted">@solicitud.medioTransporte.descripcion</span></td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-info dropdown-toggle btn-demo-space" data-toggle="dropdown" href="#" style="font-size: 11px;">
                                            Ver acciones <span class="caret"></span>
                                        </a>
                                        <ul class="dropdown-menu" style="margin-left: -55px !important;">
                                            <li>
                                                <a href="#" data-toggle="modal" data-target="#modal-solViatico"
                                                   onclick="VerDetalleSolViatico( @(new JavaScriptSerializer().Serialize(solicitud)))">
                                                    Ver Solicitud
                                                </a>
                                            </li>
                                            @if (!solicitud.marginal || (solicitud.marginal && solicitud.gastosExtrasSol.Count > 0))
                                            {
                                                validarSolamenteInforme = false;
                                                <li>
                                                    <a href="#"
                                                       onclick="MostrarModalAgregarComprobacion(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                                        Agregar comprobación
                                                    </a>
                                                </li>
                                                <li>
                                                    <a href="#" data-toggle="modal" data-target="#modal-comprobaciones"
                                                       onclick="MostrarModalComprobaciones(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                                        Ver comprobaciones
                                                    </a>
                                                </li>
                                            }
                                            @if (solicitud.itinerario.Exists(x => x.tipoSalida.idTipoSalida ==(int) EnumTipoSalida.AEREO))
                                            {
                                                validarCargaPasesDeAbordar = true;
                                                <li>
                                                    <a href="#" data-toggle="modal" data-target="#modal-itinerario"
                                                       onclick="MostrarModalItinerario(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                                        Subir pases de abordar
                                                    </a>
                                                </li>
                                            }
                                            <li>
                                                <a href="#" data-toggle="modal" data-target="#modal-concluir"
                                                   onclick="MostrarModalConluirComprobacion(@solicitud.idSolitud)">
                                                    Concluir comprobación
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-agregarComprobacion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 id="myModalLabel" class="semi-bold">Agregar comprobación.</h4>
            </div>
            <div class="modal-body">

                <div class="row form-row">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="active" id="item-factura">
                            <a href="#tabfactura" role="tab" data-toggle="tab">Factura</a>
                        </li>
                        <li id="item-archivosAdicionales">
                            <a href="#tabArchivosAdicionales" role="tab" data-toggle="tab">Validación sat y otros(ticket)</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="tabfactura">
                            <form id="form-comprobacion">
                                <div class="row form-row">
                                    <div class="col-md-6">
                                        <label class="form-label">No. de solicitud:</label>
                                        <input id="modal-comp-idSol" type="text" class="form-control" placeholder="" readonly>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Viaticante:</label>
                                        <input id="modal-comp-viaticante" type="text" class="form-control" placeholder="" readonly>
                                    </div>
                                </div>
                                <div class="row form-row">
                                    <div class="col-md-12">
                                        <label class="form-label">Tipo de gasto:</label>
                                        @Html.DropDownList("modalcompGasto", (IEnumerable<SelectListItem>)ViewBag.GastosComprobacion,
                                                      new
                                                      {
                                                          @class = "select-iica",
                                                          id = "modal-comp-tipoGasto",
                                                          style = "width: 100%;",
                                                          data_val_required = "Seleccione un nivel de mando.",
                                                          data_val = "true"
                                                      })
                                    </div>
                                </div>
                                <br />
                                <div class="row form-row">
                                    <div class="col-md-12">
                                        <label class="form-label">Factura en Xml y Pdf</label>
                                        <div style="height: 100px;">
                                            <div class="col-md-12" id="dropZoneXmlComprobacion"></div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <div class="row form-row">
                                    <div class="col-md-6">
                                        <label class="form-label">Emisor:</label>
                                        <input id="modal-comp-proveedor" type="text" class="form-control" placeholder="Proveedor" readonly>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Lugar:</label>
                                        <input id="modal-comp-lugar" type="text" class="form-control" placeholder="Lugar" readonly>
                                    </div>
                                </div>
                                <div class="row form-row">
                                    <div class="col-md-6">
                                        <label class="form-label">Subtotal:</label>
                                        <input id="modal-comp-subtotal" type="text" class="form-control" placeholder="Subtotal" readonly>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Total:</label>
                                        <input id="modal-comp-total" type="text" class="form-control" placeholder="Total" readonly>
                                    </div>
                                </div>
                                <div class="row form-row">
                                    <div class="col-md-12">
                                        <label class="form-label">Comentario:</label>
                                        <textarea id="modal-comp-comentario" type="text" class="form-control" placeholder="Comentario"></textarea>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="tab-pane" id="tabArchivosAdicionales">
                            <div class="row">
                                <div class="col-md-12" id="content-formato">
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            <label class="form-label">Factura en Xml y Pdf</label>
                                            <div style="height: 100px;">
                                                <div class="col-md-12" id="dropZoneXmlComprobacion"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            <label class="form-label">Factura en Xml y Pdf</label>
                                            <div style="height: 100px;">
                                                <div class="col-md-12" id="dropZoneXmlComprobacion"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" id="btn-cargarFactura" class="btn btn-info">Subir factura</button>
                <button type="button" id="btn-agregarComprobacion" class="btn btn-primary" onclick="OnAgregarComprobacion()">Guardar comprobación</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-comprobaciones" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br />
            </div>
            <div class="modal-body" id="modal-content-comprobaciones">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>

</div>


<div class="modal fade" id="modal-concluir" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-5x"></i>
                <h5 id="myModalLabel" class="semi-bold">Realmente desea CONCLUIR con la comprobación de gatos.</h5>
                <p class="no-margin">A continuación se muestran detalle de la solicitud.</p>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">No. de solicitud:</label>
                        <input id="modal-concluir-idSol" type="text" class="form-control" placeholder="" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Viaticante:</label>
                        <input id="modal-concluir-viaticante" type="text" class="form-control" placeholder="" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Fecha inicio:</label>
                        <input id="modal-concluir-fechaInicio" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha fin:</label>
                        <input id="modal-concluir-fechaFin" type="text" class="form-control" placeholder="Fecha fin" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Monto autorizado:</label>
                        <input id="modal-concluir-montoAut" type="text" class="form-control" placeholder="Duración del viaje" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto comprobado:</label>
                        <input id="modal-concluir-montoCompr" type="text" class="form-control" placeholder="Resultados esperados:" readonly>
                    </div>
                </div>
                <div class="row form-row" id="content-reintegro">
                    <div class="col-md-12">
                        <label style="color: #8e2b2b;font-weight: 600;" class="form-label">
                            Anexar el archivo de reintegro por la cantidad de: <span id="modal-conluir-reintegro"></span>
                        </label>
                        <div style="height: 100px;">
                            <div class="col-md-12" id="dropZoneReintegro"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="OnConluirComprobacion()">Concluir comprobación</button>
            </div>
        </div>

    </div>

</div>


@section scripts{
    <style>

        #dZUploadXmlComp, #dZUploadReintegro {
            min-height: 150px !important;
        }

            #dZUploadXmlComp .dz-details {
                height: 25px !important;
            }
    </style>


    <link href="~/Content/assets/plugins/bootstrap-select2/select2.css" rel="stylesheet" />
    @* Son para el estilo de los select ya que estan en el layout pero no funcionan si no estan en cada vista *@
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/webarch/css/webarch.css" rel="stylesheet" type="text/css" />

    <link href="~/Content/assets/plugins/jquery-datatable/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/datatables-responsive/css/datatables.responsive.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/extra/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
    <script src="~/Content/assets/js/datatables.js"></script>

    <script src="~/Content/assets/plugins/accounting/accounting.min.js"></script>

    <link href="~/Content/assets/plugins/dropzone/css/dropzone.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/dropzone/dropzone.min.js"></script>

    <script src="~/Content/assets/js/Evt/Viativos/evtMisComproSol.js"></script>

    <script>
        $(document).ready(function () {
            validarSolamenteInforme = @validarSolamenteInforme;
            validarCargaPasesDeAbordar = @validarCargaPasesDeAbordar;
        });
    </script>
}

