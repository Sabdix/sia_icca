                                                                     id = "modal-comp-tipoGasto",
                                                                     style = "width: 100%;",
                                                                     data_val_required = "Seleccione un nivel de mando.",
                                                                     data_val = "true"
                                                                 })
                                        </div>
                                    </div>
                                    <div class="row form-row">
                                        <div class="col-md-12">
                                            <label class="form-label">Comentario:</label>
                                            <textarea id="modal-comp-comentario" type="text" class="form-control" placeholder="Comentario"></textarea>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="tab-pane" id="tabArchivosAdicionales">
                                <div class="row">
                                    <div class="col-md-12" id="content-formato">
                                        <div class="row form-row">
                                            <div class="col-md-6">
                                                <label class="form-label">Comprobación del SAT</label>
                                                <div style="height: 100px;">
                                                    <div class="col-md-12" id="dropZoneSat"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Otros (ticket)</label>
