
@{
    ViewBag.Title = "SolicitudesPorAutorizar";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";
    <script>
        nodoMenu = "Mis Solicitudes";
        submenu = "En proceso";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Solicitudes por autorizar</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-mis-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No.</th>
                            <th style="width:15%;text-align: center;">Proposito</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:5%;text-align: center;">Duración viaje</th>
                            <th style="width:10%;text-align: center;">Resultados esperados</th>
                            <th style="width:10%;text-align: center;">Estatus</th>
                            <th style="width:10%;text-align: center;">Medio transporte</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.proposito</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@solicitud.duracionViaje</span></td>
                                <td><span class="muted">@solicitud.resultadosEsperados</span></td>
                                <td><span class="muted">@solicitud.estatusSolicitud.descripcion</span></td>
                                <td><span class="muted">@solicitud.medioTransporte.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-solViatico">
                                        <button data-toggle="tooltip" title="Ver Solicitud" class="btn btn-info btn-mini"
                                                onclick="VerDetalleSolViatico(@(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-list"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-completarSol">
                                        <button data-toggle="tooltip" title="Completar Solicitud" class="btn btn-success btn-mini">
                                            <i class="fa fa-plus-circle"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-cancelar">
                                        <button data-toggle="tooltip" title="Cancelar solicitud" class="btn btn-warning btn-mini">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-completarSol" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Completar datos de la solicitud.</h4>
                <p class="no-margin">A continuación se muestran los datos a completar la solicitud para autorizar.</p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-8">
                        <label class="form-label">Fecha inicio:</label>
                        <input id="modal-env-fechaInicio" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Fecha fin:</label>
                        <input id="modal-env-fechaFin" type="text" class="form-control" placeholder="Fecha fin" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Duración del viaje:</label>
                        <input id="modal-env-duracionViaje" type="text" class="form-control" placeholder="Duración del viaje" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Resultados esperados:</label>
                        <input id="modal-env-resultadosEsperados" type="text" class="form-control" placeholder="Resultados esperados:" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-12">
                        <label class="form-label">Medio de transporte:</label>
                        <input id="modal-env-medioTransporte" type="text" class="form-control" placeholder="Medio de transporte" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="EnviarSol()">Enviar solicitud</button>
            </div>
        </div>

    </div>

</div>


@section scripts{
    <link href="~/Content/assets/plugins/jquery-datatable/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/datatables-responsive/css/datatables.responsive.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/extra/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
    <script src="~/Content/assets/js/datatables.js"></script>

    <script src="~/Content/assets/js/Evt/Viativos/evtAutSolicitudes.js"></script>
}