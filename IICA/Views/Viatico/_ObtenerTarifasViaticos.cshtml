@model List<IICA.Models.Entidades.Viaticos.TarifaViatico>
@using System.Web.Script.Serialization;


<div class="grid simple vertical green">
    <div class="grid-title">
        <h4>Lista <span class="semi-bold">de tarifas de viaticos</span></h4>
    </div>
    <div class="grid-body">
        <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-tarifas">
            <thead>
                <tr>
                    <th style="width:10%;text-align: center;">No.</th>
                    <th style="width:10%;text-align: center;">Tarifa</th>
                    <th style="width:10%;text-align: center;">Pernocta</th>
                    <th style="width:10%;text-align: center;">Marginal</th>
                    <th style="width:10%;text-align: center;">Tipo viaje</th>
                    <th style="width:10%;text-align: center;">Tipo divisa</th>
                    <th style="width:10%;text-align: center;">Nivel mando</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarifa in Model)
                {
                    <tr>
                        <td>@tarifa.idTarifa</td>
                        <td>@tarifa.tarifa.ToString("C")</td>
                        <td>@tarifa.descripcionPernocta</td>
                        <td>@tarifa.descripcionMarginal</td>
                        <td>@tarifa.solicitudViatico.tipoViaje.descripcion</td>
                        <td>@tarifa.solicitudViatico.tipoDivisa.descripcion</td>
                        <td>@tarifa.nivelMando.descripcion</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<style>
    .blueIICA {
        color: #1f3853;
    }

    #modal-content-comprobaciones .grid-body {
        padding: 0px !important;
    }

    table tr th {
        font-size: 11px !important;
    }

    table td {
        font-size: 11px !important;
    }
</style>

<script>
    $(document).ready(function () {
        $('#tabla-tarifas').DataTable();
    });

</script>

