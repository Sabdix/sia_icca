
@{
    ViewBag.Title = "MisSolicitudesAutorizadas";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";
    <script>
        nodoMenu = "misSolicitudes";
        submenu = "misSolAut";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Mis solicitudes autorizadas</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-mis-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No.</th>
                            <th style="width:15%;text-align: center;">Proposito</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:5%;text-align: center;">Duración viaje</th>
                            <th style="width:10%;text-align: center;">Estatus</th>
                            <th style="width:10%;text-align: center;">Medio transporte</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.proposito</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@solicitud.duracionViaje</span></td>
                                <td><span class="muted">@solicitud.etapaSolicitud.descripcion</span></td>
                                <td><span class="muted">@solicitud.medioTransporte.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-solViatico">
                                        <button data-toggle="tooltip" title="Ver Solicitud" class="btn btn-info btn-mini"
                                                onclick="VerDetalleSolViatico(@(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-list"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-enviar">
                                        <button data-toggle="tooltip" title="Concluir solicitud" class="btn btn-success btn-mini" onclick="MostrarModalEnvSol(@(new JavaScriptSerializer().Serialize(solicitud)))">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-enviar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Concluir el proceso.</h4>
                <p class="no-margin">A continuación anexe los formatos I4 e I5 para concluir el proceso. </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">No. de solicitud:</label>
                        <input id="modal-env-solicitud" type="text" class="form-control" placeholder="No. de solicitud" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Viaticante:</label>
                        <input id="modal-env-viaticante" type="text" class="form-control" placeholder="Viaticante" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha inicio:</label>
                        <input id="modal-env-fechaInicio" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha fin:</label>
                        <input id="modal-env-fechaFin" type="text" class="form-control" placeholder="Fecha fin" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Cargar formato I4</label>
                        <div style="height: 100px;">
                            <div class="col-md-12" id="dropZoneI4"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Cargar formato I5</label>
                        <div style="height: 100px;">
                            <div class="col-md-12" id="dropZoneI5"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="EnviarSolViatico()">Concluir solicitud</button>
            </div>
        </div>

    </div>

</div>

<style>
    #dZUploadI4, #dZUploadI5 {
        min-height: 150px !important;
    }

</style>

@section scripts{
    <link href="~/Content/assets/plugins/jquery-datatable/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/datatables-responsive/css/datatables.responsive.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/extra/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
    <script src="~/Content/assets/js/datatables.js"></script>
    <link href="~/Content/assets/plugins/dropzone/css/dropzone.css" rel="stylesheet" />

    <script src="~/Content/assets/plugins/dropzone/dropzone.min.js"></script>
    <script src="~/Content/assets/js/Evt/Viativos/evtMisSolAutorizadas.js"></script>
    <script>
        $(document).ready(function () {
            $('#tabla-mis-solicitudes').dataTable()
        });

    </script>

}