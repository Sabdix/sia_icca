
@{
    ViewBag.Title = "SolicitudesPorGenerarCheque";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";
    <script>
        nodoMenu = "Mis Solicitudes";
        submenu = "Generar cheque";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Solicitudes por generar cheque</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-mis-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No. Solicitud</th>
                            <th style="width:15%;text-align: center;">Deudor</th>
                            <th style="width:15%;text-align: center;">Importe</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:8%;text-align: center;">Estatus</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.usuario.nombreCompleto</td>
                                <td>@solicitud.montoAutorizado.ToString("C")</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="muted">@solicitud.etapaSolicitud.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-solViatico">
                                        <button data-toggle="tooltip" title="Ver Solicitud" class="btn btn-info btn-mini"
                                                onclick="VerDetalleSolViatico(@(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-list"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-referencia">
                                        <button data-toggle="tooltip" title="Elaborar cheque" class="btn btn-success btn-mini"
                                                onclick="MostrarModalRefSol(@(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-referencia" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Realmente desea anotar la referencia del cheque.</h4>
                <p class="no-margin">A continuación se muestran los detalles de la solicitud </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">No. de solicitud:</label>
                        <input id="modal-referencia-solicitud" type="text" class="form-control" placeholder="No. de solicitud" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Viaticante:</label>
                        <input id="modal-referencia-viaticante" type="text" class="form-control" placeholder="Viaticante" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha inicio:</label>
                        <input id="modal-referencia-fechaInicio" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha fin:</label>
                        <input id="modal-referencia-fechaFin" type="text" class="form-control" placeholder="Fecha fin" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Duración del viaje:</label>
                        <input id="modal-referencia-duracionViaje" type="text" class="form-control" placeholder="Duración del viaje" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Resultados esperados:</label>
                        <input id="modal-referencia-resultadosEsperados" type="text" class="form-control" placeholder="Resultados esperados:" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-12">
                        <label class="form-label">Medio de transporte:</label>
                        <input id="modal-referencia-medioTransporte" type="text" class="form-control" placeholder="Medio de transporte" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Importe del viaje:</label>
                        <input id="modal-referencia_importeAutorizado" type="text" class="form-control" placeholder="Fecha cheque" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha del cheque:</label>
                        <input id="modal-fecha_cheque" type="text" class="form-control" placeholder="Fecha cheque">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="GenerarChequeSolViatico()">Elaborar cheque</button>
            </div>
        </div>

    </div>

</div>




