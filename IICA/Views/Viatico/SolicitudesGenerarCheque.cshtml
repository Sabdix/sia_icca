
@{
    ViewBag.Title = "SolicitudesPorGenerarCheque";
    Layout = "~/Views/Shared/_LayoutViaticos.cshtml";
    <script>
        nodoMenu = "Mis Solicitudes";
        submenu = "Generar cheque";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades.Viaticos
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List<IICA.Models.Entidades.Viaticos.SolicitudViatico>

<ul class="breadcrumb">
    <li>
        <p>SOLICITUDES</p>
    </li>
    <li><a href="#" class="active">Solicitudes por generar cheque</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de solicitudes</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-mis-solicitudes">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">No.</th>
                            <th style="width:15%;text-align: center;">Deudor</th>
                            <th style="width:15%;text-align: center;">Importe</th>
                            <th style="width:8%;text-align: center;">Fecha inicio</th>
                            <th style="width:8%;text-align: center;">Fecha fin</th>
                            <th style="width:10%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (SolicitudViatico solicitud in Model)
                        {
                            string labelEstatus;
                            switch ((IICA.Models.Entidades.EnumEstatusSolicitudViaticos)solicitud.estatusSolicitud.idEstatusSolicitud)
                            {
                                case IICA.Models.Entidades.EnumEstatusSolicitudViaticos.CORRECTA:
                                    labelEstatus = "success";
                                    break;
                                case IICA.Models.Entidades.EnumEstatusSolicitudViaticos.CANCELADA:
                                    labelEstatus = "important";
                                    break;
                                case IICA.Models.Entidades.EnumEstatusSolicitudViaticos.DEVUELTA:
                                    labelEstatus = "info";
                                    break;
                                default:
                                    labelEstatus = "success";
                                    break;
                            }
                            <tr>
                                <td>@solicitud.idSolitud</td>
                                <td>@solicitud.viaticante</td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaInicio == DateTime.MinValue ? "N/A" : solicitud.fechaInicio.ToShortDateString())
                                    </span>
                                </td>
                                <td>
                                    <span class="muted">
                                        @(solicitud.fechaFin == DateTime.MinValue ? "N/A" : solicitud.fechaFin.ToShortDateString())
                                    </span>
                                </td>
                                <td><span class="label label-@labelEstatus">@solicitud.estatusSolicitud.descripcion</span></td>
                                <td><span class="muted">@solicitud.medioTransporte.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-solViatico">
                                        <button data-toggle="tooltip" title="Ver Solicitud" class="btn btn-info btn-mini"
                                                onclick="VerDetalleSolViatico(@(new JavaScriptSerializer().Serialize(solicitud)) )">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-completar">
                                        <button data-toggle="tooltip" title="Completar Solicitud" class="btn btn-info btn-mini">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                    <span data-toggle="modal" data-target="#modal-cancelar">
                                        <button data-toggle="tooltip" title="Cancelar solicitud" class="btn btn-warning btn-mini">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="modal-solViatico" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-lg">
            <div class="modal-body">
                <div class="row form-row">
                    <div class="row">
                        <div class="col-md-12" id="content-solViatico">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>

</div>


<div class="modal fade" id="modal-itinBoleto" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-cloud-upload fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Boleto del itinerario.</h4>
                <p class="no-margin">De <span id="bol-ida"></span> A <span id="bol-regreso"></span> </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="row">
                        <div class="col-md-12" id="content-boleto">

                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>

</div>


@section scripts{
    <link href="~/Content/assets/plugins/jquery-datatable/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/datatables-responsive/css/datatables.responsive.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/extra/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
    <script src="~/Content/assets/js/datatables.js"></script>

    <script>
        $(document).ready(function () {
            $('#tabla-mis-solicitudes').dataTable()
        });

        function VerDetalleSolViatico(sol) {
            $.ajax({
                data: { solicitudViatico_: sol },
                url: rootUrl("/Viatico/_ResumenSolicitudViatico"),
                dataType: "html",
                method: "post",
                beforeSend: function () {
                    $("#content-solViatico").html("");
                    MostrarLoading();
                },
                success: function (data) {
                    OcultarLoading();
                    $("#content-solViatico").html(data);
                },
                error: function (xhr, status, error) {
                    ControlErrores(xhr, status, error);
                }
            });
        }
    </script>

}