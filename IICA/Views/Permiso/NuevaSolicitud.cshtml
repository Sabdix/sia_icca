
@{
    ViewBag.Title = "Registar solicitud de permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script>
        nodoMenu = "permisos";
        submenu = "nvsolPermi";
    </script>
}
@model IICA.Models.Entidades.PVI.Permiso

<ul class="breadcrumb">
    <li>
        <p>PERMISOS</p>
    </li>
    <li><a href="#" class="active">Registro de Solicitud</a> </li>
</ul>

<div class="row">
    <div class="col-md-12">
        <div class="grid simple">
            <div class="grid-title no-border">
                <h4>Ingrese los <span class="semi-bold">datos solicitados</span></h4>
            </div>
            <div class="grid-body no-border">
                <br>
                <div class="row">
                    <div class="col-md-10 col-sm-10 col-md-10 col-vlg-offset-2">
                        @using (Ajax.BeginForm("RegistrarSolicitud", "Permiso",
new AjaxOptions { HttpMethod = "POST", OnBegin = "", OnSuccess = "OnSuccesRegistrarSolicitud", OnFailure = "ControlErrores" }, new { autocomplete = "off", id = "form-nuevaSol" }))
                        {
                            <div class="row form-row">
                                <div class="col-md-6">
                                    <label class="form-label">Fecha del permiso</label>
                                    @Html.TextBoxFor(x => x.fechaPermiso, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.fechaPermiso, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-4">
                                    <label class="form-label">Hora de inicio</label>
                                    @Html.TextBoxFor(x => x.horaInicio, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.horaInicio, "", new { @class = "error" })
                                </div>
                                <div class="col-md-4">
                                    <label class="form-label">Hora fin</label>
                                    @Html.TextBoxFor(x => x.horaFin, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.horaFin, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-4">
                                    <label class="form-label">Total de horas</label>
                                    @Html.TextBoxFor(x => x.totalHoras, new { @class = "form-control", @readonly = "true" })
                                    @Html.ValidationMessageFor(x => x.totalHoras, "", new { @class = "error" })
                                </div>
                            </div>
                            <div class="row form-row">
                                <div class="col-md-8">
                                    <label class="form-label">Formato de autorización</label>
                                    <div  id="formDropZone"></div>
                                </div>
                                
                            </div>
                            <div class="row form-row">
                                <div class="col-md-8">
                                    <label class="form-label">Motivo de permiso</label>
                                    @Html.TextAreaFor(x => x.motivoPermiso, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.motivoPermiso, "", new { @class = "error" })
                                </div>
                            </div>
                            <br />
                            <div class="row form-row">
                                <div class="col-md-10">
                                    <button type="button" id="btn-guardar-sol" class="btn btn-info btn-cons"><i class="fa fa-paste"></i>&nbsp;Guardar</button>
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #dZUpload {
        min-height: 150px !important;
    }
</style>

@section scripts {

    <link href="~/Content/assets/plugins/bootstrap-datepicker/css/datepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/bootstrap-timepicker/css/bootstrap-timepicker.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/boostrap-clockpicker/bootstrap-clockpicker.min.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/bootstrap-timepicker/js/bootstrap-timepicker.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/boostrap-clockpicker/bootstrap-clockpicker.min.js" type="text/javascript"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/Content/assets/plugins/moment/moment.min.js"></script>
    <link href="~/Content/assets/plugins/dropzone/css/dropzone.css" rel="stylesheet" />
    <script src="~/Content/assets/plugins/dropzone/dropzone.min.js"></script>

    <script src="~/Content/assets/js/Evt/evtNuevaSolPermiso.js"></script>
}

