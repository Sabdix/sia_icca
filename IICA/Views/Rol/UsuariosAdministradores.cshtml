@{
    ViewBag.Title = "UsuariosAdministradores";
    Layout = "~/Views/Shared/_LayoutRolesUsuario.cshtml";
    <script>
        nodoMenu = "administradores";
        submenu = "SuperAdministradores";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades;
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model List <IICA.Models.Entidades.Usuario>

<ul class="breadcrumb">
    <li>
        <p>Superadministradores</p>
    </li>
    <li><a href="#" class="active">Usuarios administradores</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de usuarios administradores</span></h4>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-administradores">
                    <thead>
                        <tr>
                            <th style="width:2%;text-align: center;">Nombre</th>
                            <th style="width:15%;text-align: center;">Correo</th>
                            <th style="width:15%;text-align: center;">Usuario</th>
                            <th style="width:8%;text-align: center;">Rol</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Usuario usuario in Model)
                        {
                            <tr>
                                <td>@usuario.nombreCompleto</td>
                                <td>@usuario.email</td>
                                <td>@usuario.usuario</td>
                                <td><span class="muted">@usuario.rol.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-registrar-administrador">
                                        <button data-toggle="tooltip" title="Registrar administrador" class="btn btn-success btn-mini" onclick="RegistrarAdministrador(@(new JavaScriptSerializer().Serialize(usuario)))">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

    <div class="modal fade" id="modal-registrar-administrador" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <br>
                    <i class="fa fa-question-circle fa-7x"></i>
                    <h4 id="myModalLabel" class="semi-bold">Registrar administrador.</h4>
                </div>
                <div class="modal-body">
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">Nombre:</label>
                            <input id="modal-nombre" type="text" class="form-control" placeholder="No. de solicitud" readonly>
                        </div>
                         <div class="col-md-6">
                            <label class="form-label">Apellido paterno:</label>
                            <input id="modal-apellido-paterno" type="text" class="form-control" placeholder="No. de solicitud" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Apellido materno:</label>
                            <input id="modal-apellido-materno" type="text" class="form-control" placeholder="No. de solicitud" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo:</label>
                            <input id="modal-correo" type="text" class="form-control" placeholder="Viaticante" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Usuario:</label>
                            <input id="modal-usuario" type="text" class="form-control" placeholder="Fecha inicio" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Contraseña:</label>
                            <input id="modal-contrasena" type="text" class="form-control" placeholder="Fecha fin" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Rol usuario</label>
                            @Html.DropDownList("modalrol", (IEnumerable<SelectListItem>)ViewBag.RolesUsuario,
                        new
                        {
                            @class = "select-iica",
                            id = "modal-rol",
                            style = "width: 100%;",
                            data_val_required = "Seleccione un rol de usuario.",
                            data_val = "true"
                        })
                        </div>
                    </div>
            </div>
           </div>
            </div>
    </div>

@section scripts{
    <link href="~/Content/assets/plugins/jquery-datatable/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/assets/plugins/datatables-responsive/css/datatables.responsive.css" rel="stylesheet" type="text/css" media="screen" />

    <script src="~/Content/assets/plugins/bootstrap-select2/select2.min.js"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/Content/assets/plugins/jquery-datatable/extra/js/dataTables.tableTools.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/datatables.responsive.js"></script>
    <script type="text/javascript" src="~/Content/assets/plugins/datatables-responsive/js/lodash.min.js"></script>
    <script src="~/Content/assets/js/datatables.js"></script>
    <script src="~/Content/assets/js/Evt/RolesUsuario/evtAdministradores.js"></script>
    <script>
        $(document).ready(function () {
            $('#tabla-administradores').dataTable()
        });

            //Catalogos

            var catRolesUsuario;
            catRolesUsuario = @Html.Raw(new JavaScriptSerializer().Serialize(ViewBag.RolesUsuario));
    </script>

}

