
@{
    ViewBag.Title = "Administradores de RH";
    Layout = "~/Views/Shared/_LayoutRolesUsuario.cshtml";
    <script>
        nodoMenu = "administradores";
        submenu = "AdministradoresRH";
    </script>
}

@using System.Globalization;
@using IICA.Models.Entidades;
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model IICA.Models.Entidades.Usuario

<ul class="breadcrumb">
    <li>
        <p>Administradores RH</p>
    </li>
    <li><a href="#" class="active">Usuarios administradores de RH</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de usuarios administradores de RH</span></h4>
                <button type="button" data-toggle="modal" data-target="#modal-registrar-usuario"
                        onclick="MostrarModalAddUsuario()" style="float: right" class="btn btn-info btn-xs btn-mini">
                    <i class="fa fa-plus-circle"></i>&nbsp;Agregar
                </button>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-administradores">
                    <thead>
                        <tr>
                            <th style="width:5%;text-align: center;">No.</th>
                            <th style="width:20%;text-align: center;">Nombre</th>
                            <th style="width:20%;text-align: center;">Usuario</th>
                            <th style="width:15%;text-align: center;">Correo </th>
                            <th style="width:15%;text-align: center;">Correo opcional</th>
                            <th style="width:12%;text-align: center;">Rol</th>
                            <th style="width:12%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Usuario usuario in ViewBag.Usuarios)
                        {
                            <tr>
                                <td>@usuario.idUsuario</td>
                                <td>@usuario.nombreCompleto</td>
                                <td>@usuario.usuario_</td>
                                <td>@usuario.email</td>
                                <td>@usuario.email2</td>
                                <td><span class="muted">@usuario.rol.descripcion</span></td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-registrar-usuario">
                                        <button data-toggle="tooltip" title="Editar usuario" class="btn btn-success btn-mini" onclick="MostrarModalEditarUsuario(@(usuario.idUsuario))">
                                            <i class="fa fa-check-square-o"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-registrar-usuario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-user fa-5x"></i>
                <h4 id="myModalLabel" class="semi-bold">Registro de @ViewBag.Title.</h4>
            </div>
            <div class="modal-body">
                <form id="form-registrar-usuario">
                    <div class="row form-row">
                        <div class="col-md-4">
                            <label class="form-label">Nombre:</label>
                            @Html.TextBoxFor(x => x.nombre, new { @class = "form-control", placeholder = "Nombre" })
                            @Html.ValidationMessageFor(x => x.nombre, "", new { @class = "error" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Apellido paterno:</label>
                            @Html.TextBoxFor(x => x.apellidoPaterno, new { @class = "form-control", placeholder = "Apellido paterno" })
                            @Html.ValidationMessageFor(x => x.apellidoMaterno, "", new { @class = "error" })
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Apellido materno:</label>
                            @Html.TextBoxFor(x => x.apellidoMaterno, new { @class = "form-control", placeholder = "Apellido materno" })
                            @Html.ValidationMessageFor(x => x.apellidoMaterno, "", new { @class = "error" })
                        </div>
                    </div>
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">Correo:</label>
                            @Html.TextBoxFor(x => x.email, new { @class = "form-control", placeholder = "Correo" })
                            @Html.ValidationMessageFor(x => x.email, "", new { @class = "error" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Correo (opcional):</label>
                            @Html.TextBoxFor(x => x.email2, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row form-row">
                        <div class="col-md-6">
                            <label class="form-label">Usuario: (identificador para iniciar sesión)</label>
                            @Html.TextBoxFor(x => x.usuario_, new { @class = "form-control", placeholder = "Usuario" })
                            @Html.ValidationMessageFor(x => x.usuario_, "", new { @class = "error" })
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Contraseña:</label>
                            @Html.TextBoxFor(x => x.contrasena, new { @class = "form-control", placeholder = "Contraseña", type = "password" })
                            @Html.ValidationMessageFor(x => x.contrasena, "", new { @class = "error" })
                            <div class="row-fluid">
                                <div class="checkbox check-success 	">
                                    <input id="checkbox2" type="checkbox" value="1" onclick="MostrarContraseña()">
                                    <label for="checkbox2"> Mostrar contraseña</label>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="OnGuardarUsuario()">Guardar</button>
            </div>
        </div>
    </div>
</div>

