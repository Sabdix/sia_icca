
@{
    ViewBag.Title = "Autorizadores Viaticos";
    Layout = "~/Views/Shared/_LayoutRolesUsuario.cshtml";

    <script>
        nodoMenu = "autorizadores";
        submenu = "autorizadoresViaticos";
    </script>
}
@using System.Globalization;
@using IICA.Models.Entidades;
@using System.Web.Script.Serialization;
@using IICA.Models.Entidades

@model IICA.Models.Entidades.Usuario

<ul class="breadcrumb">
    <li>
        <p>Autorizadores Viaticos</p>
    </li>
    <li><a href="#" class="active">Usuarios Autorizadores Viaticos</a> </li>
</ul>

<div class="row-fluid">
    <div class="span12">
        <div class="grid simple ">
            <div class="grid-title">
                <h4>Lista <span class="semi-bold">de usuarios autorizadores viaticos</span></h4>
                <button type="button" data-toggle="modal" data-target="#modal-registrar-usuario"
                        onclick="MostrarModalAddUsuario()" style="float: right" class="btn btn-info btn-xs btn-mini">
                    <i class="fa fa-plus-circle"></i>&nbsp;Agregar
                </button>
            </div>
            <div class="grid-body ">
                <table class="table table-hover no-more-tables" style="text-align: center;" id="tabla-autorizadores">
                    <thead>
                        <tr>
                            <th style="width:5%;text-align: center;">No.</th>
                            <th style="width:20%;text-align: center;">Nombre</th>
                            <th style="width:20%;text-align: center;">Usuario</th>
                            <th style="width:15%;text-align: center;">Correo </th>
                            <th style="width:15%;text-align: center;">Proyecto</th>
                            <th style="width:12%;text-align: center;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Usuario usuario in ViewBag.Usuarios)
                        {
                            <tr>
                                <td>@usuario.idUsuario</td>
                                <td>@usuario.nombreCompleto</td>
                                <td>@usuario.usuario_</td>
                                <td>@usuario.email</td>
                                <td>@usuario.programa</td>
                                <td>
                                    <span data-toggle="modal" data-target="#modal-eliminar">
                                        <button data-toggle="tooltip" title="Eliminar autorizador viatico" class="btn btn-warning btn-mini" onclick="MostrarModalElmSol(@(new JavaScriptSerializer().Serialize(usuario)))">
                                            <i class="fa fa-close"></i>
                                        </button>
                                    </span>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-registrar-usuario" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-user fa-5x"></i>
                <h4 id="myModalLabel" class="semi-bold">Registro de @ViewBag.Title.</h4>
            </div>
            <div class="modal-body">
                <form id="form-registrar-usuario">
                    <div class="row form-row">
                        <div class="col-md-4">
                            <label class="form-label">Introduce el número de empleado:</label>
                        </div>
                        <div class="col-md-4">
                            @Html.TextBoxFor(x => x.emCveEmpleado, new { @class = "form-control", placeholder = "Número de empleado",id="cveEmp" })
                            @Html.ValidationMessageFor(x => x.emCveEmpleado, "", new { @class = "error" })
                        </div>
                        <div class="col-md-4">
                            <button type="button" class="btn btn-success" onclick="MostrarInformacionEmpleado()">Consultar datos</button>
                        </div>
                    </div>
                        <div class="row form-row">
                            <div class="col-md-4">
                                <label class="form-label">Nombre:</label>
                                <input id="modal-nombre" type="text" class="form-control" placeholder="Nombre" readonly>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Apellido paterno:</label>
                                <input id="modal-apellidop" type="text" class="form-control" placeholder="Apellido paterno" readonly>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Apellido materno:</label>
                                <input id="modal-apellidom" type="text" class="form-control" placeholder="Apellido materno" readonly>
                            </div>
                        </div>
                        <div class="row form-row">
                            <div class="col-md-6">
                                <label class="form-label">Correo:</label>
                                <input id="modal-correo" type="text" class="form-control" placeholder="Correo" readonly>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Tipo de viaje</label>
                                @Html.DropDownListFor(x => x.proyecto.idProyecto, (IEnumerable<SelectListItem>)ViewBag.Proyectos, "SELECCIONE EL PROYECTO",
                                      new { @class = "select-iica", style = "width: 100%;", id = "tipoProyecto", data_val = "true" })
                                @Html.ValidationMessageFor(x => x.proyecto.idProyecto, "", new { @class = "error" })
                            </div>
                        </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="OnGuardarUsuario()">Guardar</button>
            </div>
        </div>
    </div>
</div>
</div>
<div class="modal fade" id="modal-eliminar" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <br>
                <i class="fa fa-question-circle fa-7x"></i>
                <h4 id="myModalLabel" class="semi-bold">Realmente desea ELIMINAR el siguiente autorizador de viaticos.</h4>
                <p class="no-margin">A continuación se muestran los detalles del autorizador de viaticos </p>
                <br>
            </div>
            <div class="modal-body">
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">No.:</label>
                        <input id="modal-elm-numero" type="text" class="form-control" placeholder="No." readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Nombre:</label>
                        <input id="modal-elm-nombre" type="text" class="form-control" placeholder="Nombre" readonly>
                    </div>
                    
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Usuario:</label>
                        <input id="modal-elm-usuario" type="text" class="form-control" placeholder="Usuario" readonly>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Correo:</label>
                        <input id="modal-elm-correo" type="text" class="form-control" placeholder="Correo" readonly>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="col-md-6">
                        <label class="form-label">Proyecto:</label>
                        <input id="modal-elm-proyecto" type="text" class="form-control" placeholder="Proyecto" readonly>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="EliminarAut()">Eliminar autorizador</button>
            </div>
        </div>

    </div>

</div>

